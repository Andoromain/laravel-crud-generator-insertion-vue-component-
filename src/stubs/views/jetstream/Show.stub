                            </div>
                        </div>
                        
                        <div class="flex items-center justify-end mt-4">
                            <inertia-link :href="route('{{modelRoute}}.edit', {{modelNameLowerCase}}.id)" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded mr-2">
                                Edit
                            </inertia-link>
                            <button @click="destroy" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </app-layout>
</template>

<script>
import { defineComponent } from 'vue'
import AppLayout from '@/Layouts/AppLayout.vue'

export default defineComponent({
    components: {
        AppLayout
    },
    props: {
        {{modelNameLowerCase}}: Object
    },
    methods: {
        destroy() {
            if (confirm(`Are you sure you want to delete this {{modelTitle}}?`)) {
                this.$inertia.delete(route('{{modelRoute}}.destroy', this.{{modelNameLowerCase}}.id))
            }
        }
    }
})
</script>